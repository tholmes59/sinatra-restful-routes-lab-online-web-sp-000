<form action="/recipes/<%= @recipes.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="text" name="name" placeholder="<%= @recipes.name %>">
  <input type="text" name="ingredients" placeholder="<%= @recipes.ingredients %>">
  <input type="text" name="cook time" placeholder="<%= @recipes.cook_time %>">
  <input type="submit" value="submit">
</form>